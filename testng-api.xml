<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Suite" parallel="classes" thread-count="4" verbose="0">

	<test name="API Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<packages>
			<package name="api.tests.account" />
			<package name="api.tests.products" />
		</packages>
	</test>
	<test name="API Functional Tests">
		<groups>
			<run>
				<include name="functional" />
			</run>
		</groups>
		<packages>
			<package name="api.tests.account" />
			<package name="api.tests.products" />
		</packages>
	</test>
	<test name="API Integration Tests">
		<groups>
			<run>
				<include name="integration" />
			</run>
		</groups>
		<packages>
			<package name="api.tests.integration" />
		</packages>
	</test>

</suite>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UI Suite" parallel="true" thread-count="4" verbose="0">

	<test name="UI Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<packages>
			<package name="ui.tests.account" />
			<package name="ui.tests.cart" />
			<package name="ui.tests.checkout" />
			<package name="ui.tests.contactus" />
			<package name="ui.tests.homepage" />
			<package name="ui.tests.products" />
		</packages>
	</test>
	<test name="UI Functional Tests">
		<groups>
			<run>
				<include name="functional" />
			</run>
		</groups>
		<packages>
			<package name="ui.tests.account" />
			<package name="ui.tests.cart" />
			<package name="ui.tests.checkout" />
			<package name="ui.tests.contactus" />
			<package name="ui.tests.homepage" />
			<package name="ui.tests.products" />
		</packages>
	</test>

</suite>